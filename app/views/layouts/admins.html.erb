<% content_for :admins_layout do %>
<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <h2 class="fs-5 pt-3 d-none d-sm-inline">Welcome, 
                
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                   <li class="nav-item my-2">
                        <h2 class="py-3 d-none d-sm-inline">     
                        <%= link_to current_user.first_name, profile_path, method: "get", class: "nav-link text-white d-none d-sm-inline" %>
                        </h2>
                    </li>
                    <% if current_user.admin? %>
                    <li class="nav-item my-2">
                        <%= link_to "Users", users_path, method: "get", class: "nav-link text-white d-none d-sm-inline" %>
                    </li>
                    <li class="nav-item my-2">
                        <%= link_to "Toys", toys_path, method: "get", class: "nav-link text-white d-none d-sm-inline" %>
                    </li>
                    <% end  %>
                </ul>
            </div>
        </div>
        <div class="col py-3">
            <h3>Left Sidebar with Submenus</h3>
            <p class="lead">
                An example 2-level sidebar with collasible menu items. The menu functions like an "accordion" where only a single 
                menu is be open at a time. While the sidebar itself is not toggle-able, it does responsively shrink in width on smaller screens.
            </p>
            <%= yield %>
        </div>
    </div>
</div>
<% end %>

<%= render template: 'layouts/application' %>