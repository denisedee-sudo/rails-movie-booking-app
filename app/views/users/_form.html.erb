<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <% if current_user && current_user.admin?  %>
    <div class="field">
      <%= form.label :admin %>
      <%= form.check_box :admin %>
    </div>
    <% end  %>

  <div class="field">
    <br />
    <%= form.text_field :first_name,  class: "form-control", :placeholder => "First Name" %>
  </div>

  <div class="field">
    <br />
    <%= form.text_field :last_name,  class: "form-control", :placeholder => "Last Name" %>
  </div>

  <div class="field">
    <br />
    <%= form.text_field :email,  class: "form-control", :placeholder => "Email" %>
  </div>

  <div class="field">
    <br />
    <%= form.telephone_field :phone,  class: "form-control", :placeholder => "Phone number" %>
  </div>

  <div class="field">
    <br />
    <%= form.text_field :password,  class: "form-control", :placeholder => "Password" %>
  </div>
  <br />
  <div class="actions">
    <%= form.submit "SUBMIT", class: "btn btn-green hover-bg-lgreen w-100" %>
  </div>
<% end %>
